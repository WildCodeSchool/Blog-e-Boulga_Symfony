<article>
    <div class="leftSide">
        <figure class="profil">
            <img src="{{ asset('build/images/authors/' ~ author.imgSrc) }}" alt={{ author.user.firstName }} {{ author.user.lastName }}>
        </figure>
        <span class="authorName">
            <h2> {{ author.user.firstName }} {{ author.user.lastName }} </h2>
        </span>
        <div class="website">
            <a href={{ author.websiteURL }} ><img src="{{ asset('build/images/components/myWebSite.svg') }}" alt="Site web
            personnel">
                Mon Site</a>
        </div>
    </div>
    <img class="firstquote" src="{{ asset('build/images/components/quote.svg') }}" alt="quote">
    <aside>
        <p>
            {{ author.fullDescription|raw }}  <span> <img src="{{ asset('build/images/components/entypo_quote.svg') }}" alt="endquote">
            </span>
        </p>
    </aside>
    <a class="linkedinProfil" href={{ author.linkedinUrl }} ><img src="{{ asset('build/images/components/linkedin.svg') }}"
                                                                alt="Profil Linkedin"> Mon
        profil Linkedin</a>
    <a class="githubProfil" href={{ author.githubUrl }} ><img src="{{ asset('build/images/components/github.svg') }}" alt="Profil
    Github"> Mon espace
        Github</a>
</article>
<figure class="separationAbout">
    <img class="smallSeparation" src="{{ asset('build/images/components/small_separation.svg') }}" alt="small separation">
</figure>
