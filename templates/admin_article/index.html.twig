{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ArticleTitle</th>
                <th>HomeTitle</th>
                <th>ImgSrc</th>
                <th>AltImg</th>
                <th>HomePreview</th>
                <th>Introduction</th>
                <th>Detail</th>
                <th>Description</th>
                <th>ShadowColor</th>
                <th>ReleaseDate</th>
                <th>Status</th>
                <th>UpdatedAt</th>
                <th>ImageSize</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.articleTitle }}</td>
                <td>{{ article.homeTitle }}</td>
                <td>{{ article.imgSrc }}</td>
                <td>{{ article.altImg }}</td>
                <td>{{ article.homePreview }}</td>
                <td>{{ article.introduction }}</td>
                <td>{{ article.detail }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.shadowColor }}</td>
                <td>{{ article.releaseDate ? article.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.status }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.imageSize }}</td>
                <td>
                    <a href="{{ path('app_admin_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_article_new') }}">Create new</a>
{% endblock %}
