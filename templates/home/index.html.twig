{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
    {% set mainId = mainArticle.id %}
    <main>
		<section class="hotNews_block">
			<article class="card bigNews">
				<a href="/article/{{mainArticle.id}}">
					<div class="title_bigNews title_news">
                        <p class="categoryBox">{{ mainArticle.category.categoryName }}</p>
                        <img class="big" src="{{ asset('build' ~ mainArticle.imgSrc) }}" alt="{{ mainArticle.altImg}}">
						<div class="articleTeasing">
							<h1>{{ mainArticle.homeTitle }}</h1>
							<p>
                                {{ mainArticle.homePreview }}
                                <br>
                                <br>
                                <span class="authorName">Écrit par {{ mainArticle.author.user.firstName }} {{ mainArticle.author.user.lastName }}</span>
                            </p>
                        </div>
					</div>
				</a>
			</article>

			<article class="card middle_news">
                {% for relatedArticle in relatedArticles %}
                    <a href="/article/{{ relatedArticle.id }}">
                        <div class="card1">
                            <p class="categoryBox">{{ relatedArticle.category.categoryName }}</p>
                            <img class="small" src="{{ asset('build' ~ relatedArticle.imgSrc) }}" alt="{{ relatedArticle.altImg }}">
                            <h2>{{ relatedArticle.homeTitle }}</h2>
                        </div>
                    </a>
                {% endfor %}
			</article>
		</section>
		<span class="separation_bar"><img class="separation" src="{{ asset('build/images/components/separation.svg') }}" alt="Barre de séparation"></span>

		<section class="article_list">
            {% for allArticle in allArticles %}
                <a href="/article/{{ allArticle.id }}">
                    <article class="article_block">
                        <div class="card_container">
                            <div class="card2">
                                <p class="categoryBox">{{ allArticle.category.categoryName }}</p>
                                <img class="medium" src="{{ asset('build' ~ allArticle.imgSrc) }}" alt="{{ allArticle.altImg }}">
                            </div>
                        </div>
                        <div class="little_article">
                            <h3>
                                {{ allArticle.homeTitle }}
                            </h3>
                            <p class="authorName">Écrit par {{ allArticle.author.user.firstName }} {{ allArticle.author.user.lastName }}</p>
                            <p class="articleDescription">{{ allArticle.description }}</p>
                        </div>
                    </article>
                </a>
            {% endfor %}
		</section>
	</main>
{% endblock %}
